<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivBrain"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="121dp"
        android:src="@drawable/icone_brain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvQuizzes"
        android:layout_width="285dp"
        android:layout_height="0dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:fontFamily="@font/karla"
        android:text="@string/quizzes"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="1.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBrain" />

    <TextView
        android:id="@+id/tvBrainPower"
        android:layout_width="405dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3.5"
        android:text="@string/enjoy_brain_power"
        android:textSize="36sp"
        android:fontFamily="@font/karla"
        app:layout_constraintTop_toBottomOf="@id/tvQuizzes"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="69dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>